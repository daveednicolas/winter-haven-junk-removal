    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <h3 class="text-lg font-semibold mb-2">Winter Haven Junk Removal</h3>
        <p class="text-gray-300 mb-2">Professional junk removal services in Winter Haven, FL</p>
