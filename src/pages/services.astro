---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Services - Winter Haven Junk Removal" description="Our services">
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-4xl font-bold text-center mb-8">Our Services</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded shadow">
          <h2 class="text-2xl font-bold mb-2">Furniture Removal</h2>
          <p>Sofas, chairs, mattresses, and more</p>
        </div>
        <div class="bg-white p-6 rounded shadow">
          <h2 class="text-2xl font-bold mb-2">Appliance Pickup</h2>
          <p>Refrigerators, washers, dryers</p>
        </div>
        <div class="bg-white p-6 rounded shadow">
          <h2 class="text-2xl font-bold mb-2">Construction Debris</h2>
          <p>Drywall, flooring, renovation waste</p>
        </div>
        <div class="bg-white p-6 rounded shadow">
          <h2 class="text-2xl font-bold mb-2">Estate Cleanouts</h2>
          <p>Full house and property cleanouts</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
