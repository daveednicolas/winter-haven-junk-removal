---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Winter Haven Junk Removal" description="Professional junk removal services">
  <section class="bg-blue-600 text-white py-20">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold mb-6">
        Winter Haven's #1 Junk Removal Service
      </h1>
      <p class="text-xl mb-8">
        Fast, reliable, and eco-friendly junk removal in Winter Haven, FL
      </p>
      <a href="tel:8635550123" class="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-bold">
        Call: (863) 555-0123
      </a>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8">Why Choose Us?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-xl font-bold mb-2">Same Day Service</h3>
          <p>Call before 2 PM for same-day pickup in Winter Haven</p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">Licensed & Insured</h3>
          <p>Fully licensed and insured for your peace of mind</p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-2">Eco-Friendly</h3>
          <p>We recycle and donate whenever possible</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
